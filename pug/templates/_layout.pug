mjml
    //- Head
    mj-head
        mj-title Lettre Assurance Étudiant Octobre 2024
        mj-raw.
            <meta name='color-scheme' content='light'/>
            <meta name='supported-color-schemes' content='light'/>
            <meta name="format-detection" content="telephone=no"/>
            <meta name="format-detection" content="date=no"/>
            <meta name="format-detection" content="address=no"/>
            <meta name="format-detection" content="email=no"/>
        mj-attributes
            mj-all(font-family='Arial, Helvetica, sans-serif')/
            //-Police Font
            mj-class(name='+2T' font-family='"kari-display-pro", sans-serif' font-size='65px' line-height="69px" font-weight="400" font-style='normal')
            mj-class(name='+1T' font-family='"Outfit", serif' font-style='normal')
            mj-class(name='0T' font-size="16px" line-height="20px" font-weight="400" font-style="normal")/
            mj-class(name='-1T' font-size="12px" line-height="16px" font-weight="400" font-style="normal")/
            mj-class(name='-2T' font-size="10px" line-height="14px" font-weight="400" font-style="normal")/
            //-color
            mj-class(name="cR" color="#c1272d")
            mj-class(name="cT0" color="#333333")
            mj-class(name="cT1+" color="#737373")
        mj-style. 
            @import url("https://use.typekit.net/saz8jys.css");
            @import url('https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&display=swap');

        mj-breakpoint(width='480px')
    //- Body
    mj-body(background-color='#fcfcfc')
        //- Header
        block header
            include ../includes/_header
        //- Content
        block content
        //- footer Post
        block footer
            include ../includes/_footer
        //- Farandole
        block farandole
            include ../includes/_farandole
        //- Dossier
            block article_1
            include ../includes/_article1
        mj-section
            mj-column
                mj-text(align="center" padding-top="0" padding-bottom="0" mj-class="-2T cT2+") Si tu ne parviens pas à lire cet e-mail, clique ici
                mj-text(align="center" padding-top="0" padding-bottom="0" mj-class="-2T cT2+") Cet email a été envoyé à {{contact.EMAIL}}, tu l'as reçu car tu suis la formation SUPVETO.
                mj-text(align="center" padding-top="0" padding-bottom="0" mj-class="-2T cT2+") Se désinscrire
                mj-text(align="center" mj-class="-2T cT2+") ©2024 supveto